#include "shell.h"

int main(void)
{
    char *line = NULL, **args;
    size_t len = 0;
    ssize_t nread;
    pid_t pid;
    int status;

    while (1)
    {
        write(STDOUT_FILENO, "$ ", 2);
        nread = getline(&line, &len, stdin);
        if (nread == -1)
        {
            free(line);
            exit(0);
        }

        args = tokenize(line);
        if (!args || !args[0])
        {
            free_args(args);
            continue;
        }

        if (_strcmp(args[0], "env") == 0)
        {
            _print_env();
            free_args(args);
            continue;
        }

        pid = fork();
        if (pid == 0)
        {
            if (execve(args[0], args, environ) == -1)
                perror("Error");
            exit(EXIT_FAILURE);
        }
        else
        {
            wait(&status);
        }

        free_args(args);
    }

    free(line);
    return 0;
}
