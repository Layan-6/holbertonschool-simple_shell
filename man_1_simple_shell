#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <string.h>
#include <sys/wait.h>

extern char **environ;

int _strcmp(const char *s1, const char *s2)
{
    while (*s1 && *s2 && *s1 == *s2)
        s1++, s2++;
    return (*s1 - *s2);
}

int _strlen(const char *s)
{
    int len = 0;
    while (s[len])
        len++;
    return len;
}

int main(void)
{
    char *line = NULL, *token, **args;
    size_t len = 0;
    ssize_t nread;
    int i, status;
    pid_t pid;

    while (1)
    {
        write(STDOUT_FILENO, "$ ", 2);
        nread = getline(&line, &len, stdin);
        if (nread == -1)
        {
            free(line);
            exit(0);
        }

        args = malloc(sizeof(char *) * 64);
        if (!args)
            continue;

        token = strtok(line, " \t\n");
        i = 0;
        while (token)
        {
            args[i++] = strdup(token);
            token = strtok(NULL, " \t\n");
        }
        args[i] = NULL;

        if (args[0] == NULL)
        {
            free(args);
            continue;
        }

        if (_strcmp(args[0], "env") == 0)
        {
            for (i = 0; environ && environ[i]; i++)
            {
                write(STDOUT_FILENO, environ[i], _strlen(environ[i]));
                write(STDOUT_FILENO, "\n", 1);
            }
            for (i = 0; args[i]; i++)
                free(args[i]);
            free(args);
            continue;
        }

        pid = fork();
        if (pid == 0)
        {
            if (execve(args[0], args, environ) == -1)
                perror("Error");
            exit(EXIT_FAILURE);
        }
        else
        {
            wait(&status);
        }

        for (i = 0; args[i]; i++)
            free(args[i]);
        free(args);
    }

    free(line);
    return 0;
}
